// Create Alguine's Ghost
IF
	Global("bsCreateAlguineGhostFM4","GLOBAL",0)
	OR(6)
		IsOverMe(Player1)
		IsOverMe(Player2)
		IsOverMe(Player3)
		IsOverMe(Player4)
		IsOverMe(Player5)
		IsOverMe(Player6)
THEN
	RESPONSE #100
		SetGlobal("bsCreateAlguineGhostFM4","GLOBAL",1)
		CreateCreature("bsalghst",[700.1078],7)
END
